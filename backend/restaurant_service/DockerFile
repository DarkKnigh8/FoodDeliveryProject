# Use official Node.js runtime as the base image
FROM node:23-alpine

# Set working directory
WORKDIR /app

# Copy package files first to leverage Docker cache
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy all project files
COPY . .

# Ensure uploads directory exists
RUN mkdir -p public/uploads/menu public/uploads/restaurants

# Expose service port
EXPOSE 5000

# Start the app (change to "npm run dev" if you want development mode)
CMD ["npm", "start", "dev"]
